# Contributor: Robert Orzanna <orschiro@gmail.com>

pkgname=powersaving
pkgver=0.1
pkgrel=1
pkgdesc="A powersaving collection which perfectly supplements TLP"
arch=('any')
url="https://github.com/orschiro/pkgbuild/powersaving"
license=('GPL')
groups=()
depends=('bash')
install=powersaving.install
source=('powersaving' '50-powersaving.rules' 'powersaving.service')
md5sums=('44b50bfc4772f785283aa97276ad7d8c'
         'af7cc441e079c3813446ce160b92a804'
         'ecdc1ab89a1ea14fd47cc3c6a6a07009')

package() {
  cd "${srcdir}"
  install -Dm644 "50-powersaving.rules" "$pkgdir/etc/udev/rules.d/50-powersaving.rules"
  install -Dm644 "powersaving.service" "$pkgdir/etc/systemd/system/powersaving.service"
  install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
}