# Maintainer: Robert Orzanna <orschiro at gmail dot com>

pkgname=sxiv-rifle
pkgver=1.0
pkgrel=1
pkgdesc="Browse through images in directory after opening a single file"
arch=('i686' 'x86_64')
url="https://wiki.archlinux.org/index.php/Sxiv#Browse_through_images_in_directory_after_opening_a_single_file"
license=('GPL2')
depends=('sxiv')
source=('http://git.savannah.gnu.org/cgit/ranger.git/plain/doc/examples/rifle_sxiv.sh')
md5sums=('e12a03a999dc7bcd72aa0558650e4b8c')

package() {
  cd "$srcdir"
  install -Dm755 rifle_sxiv.sh "$pkgdir/usr/bin/sxiv-rifle"
}

